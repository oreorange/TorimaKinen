<table class='table'>
  <tr>
    <th>アイコン</th>
    <th>名前</th>
    <th colspan="3"></th>
  </tr>
  <% users.each do |user| %>
  <tr>
    <td>
      <%= attachment_image_tag user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    </td>
    <td>
      <%= link_to user.name, user_path(user), class: "user_#{user.id}" %><br>
      <%= user.introduction %>
    </td>
    <td id="follow_btn_<%= user.id %>">
      <%= render 'relationships/follow', user: user %>
    </td>
  </tr>
  <% end %>
</table>