<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザー</h2>
      <%= render 'info', user: current_user %>
    </div>
    <div class='col-md-8 offset-md-1'>
        <!-- もしユーザーがログインしていたら -->
        <table class='table'>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
            </td>
            <td><%= link_to user.name, user_path(user), class: "user_#{user.id}" %></td>
            <td id="follow_btn_<%= user.id %>">
              <%= render 'relationships/follow', user: user %>
            </td>
          </tr>
            <% end %>
        </table>
    </div>
  </div>
</div>